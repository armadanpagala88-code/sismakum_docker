<?xml version="1.0" encoding="UTF-8"?>
<!--
    SISMAKUM - Web.config for IIS/Windows Hosting
    File ini untuk hosting Windows/IIS
-->
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- API requests - redirect to Laravel backend -->
                <rule name="API Requests" stopProcessing="true">
                    <match url="^api/(.*)" />
                    <action type="Rewrite" url="backend/public/index.php" appendQueryString="true" />
                </rule>
                
                <!-- Storage files - redirect to Laravel storage -->
                <rule name="Storage Files" stopProcessing="true">
                    <match url="^storage/(.*)" />
                    <action type="Rewrite" url="backend/public/storage/{R:1}" />
                </rule>
                
                <!-- Static files - serve directly -->
                <rule name="Static Files" stopProcessing="true">
                    <match url="\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json)$" />
                    <action type="None" />
                </rule>
                
                <!-- All other requests - redirect to root index.php -->
                <rule name="Vue Router" stopProcessing="true">
                    <match url=".*" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.php" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- Default document -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
            </files>
        </defaultDocument>
        
        <!-- Security: Deny access to sensitive files -->
        <security>
            <requestFiltering>
                <hiddenSegments>
                    <add segment=".env" />
                    <add segment=".git" />
                    <add segment="node_modules" />
                    <add segment="vendor" />
                </hiddenSegments>
            </requestFiltering>
        </security>
    </system.webServer>
</configuration>
